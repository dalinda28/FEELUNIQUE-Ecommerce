{% extends 'base.html.twig' %}

{% block title article.title %}
{% block body %}
<div class="container bg-light mt-4">
    <h1>{{ article.title }}</h1>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <aside class="col-md-6">
                    <article class="gallery-wrap">
                        <div class="card img-big-wrap">
                            {% if article.filename %}
                                <img alt="card-img-top" src=" {{ vich_uploader_asset(article, 'imageFile') }}" style="width: 100%; height: auto;">
                            {% endif %}
                        </div>
                    </article> <!-- gallery-wrap .end// -->
                </aside>
                <main class="col-md-6">
                    <article>
                        <a href="#" class="text-primary btn-link ">{{ article.categoryType }}</a>
                        <h3 class="title">{{ article.title }}</h3>
                    
                        <hr>
                
                        <div class="mb-3">
                            <h6>Description</h6>
                            <p>{{ article.description }}</p>
                        </div>
                            
                        <div class="mb-3">
                            <var class="price h4">{{ article.price }} â‚¬</var> <br>
                        </div>

                        <div class="mb-4">
                            <a href="#" class="btn btn-primary">Buy now</a>
                            <a href="#" class="btn btn-light">Add to card</a>
                        </div>
                            
                    </article> 
                </main> 
            </div> 
        </div>
    </div>
</div>
{% endblock %}

